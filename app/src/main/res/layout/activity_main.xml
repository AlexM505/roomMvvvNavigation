<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".ui.MainActivity">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="70dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph='@navigation/nav_graph' />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:backgroundColor="?attr/bgBottombarColor"
        app:textColor="@color/primaryColor"
        app:textSize="12sp"
        app:iconSize="24dp"
        app:itemFontFamily="@font/ubuntu_bold"
        app:indicatorColor="?attr/indicatorColor"
        app:indicatorRadius="10dp"
        app:sideMargins="8dp"
        app:itemPadding="8dp"
        app:iconTint="@color/itemColor"
        app:iconTintActive="@color/primaryColor"
        app:menu="@menu/menu_bottom_bar"
        app:cornerRadius="12dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>